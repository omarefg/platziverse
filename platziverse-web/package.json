{
  "name": "platziverse-web",
  "version": "1.0.0",
  "description": "A simple IoT Platform",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "prestart": "npm run build",
    "build": "NODE_ENV=production browserify -g envify -t babelify -t vueify client/app.js | uglifyjs -c -m -o public/bundle.js",
    "start-dev": "DEBUG=platziverse:* nodemon server.js",
    "prestart-dev": "npm run build-dev",
    "build-dev": "browserify -g envify -t babelify -t vueify client/app.js -o public/bundle.js",
    "lint": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omarefg/platziverse.git"
  },
  "author": "@omarefg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/omarefg/platziverse/issues"
  },
  "homepage": "https://github.com/omarefg/platziverse#readme",
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "envify": "^4.1.0",
    "nodemon": "^1.11.0",
    "standard": "^10.0.3",
    "uglify-js": "^3.0.27",
    "vueify": "^9.4.1"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "chart.js": "^2.9.4",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "express-asyncify": "^1.0.0",
    "moment": "^2.18.1",
    "platziverse-agent": "file:../platziverse-agent",
    "platziverse-utils": "file:../platziverse-utils",
    "random-material-color": "^1.0.3",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "vue": "^2.4.2",
    "vue-chartjs": "^2.8.1"
  }
}
